---
// HeavyRobotModelViewer.astro
// Props for customization
interface Props {
  width?: string; // Container width as CSS value (can use % or other units)
  height?: string; // Container height as CSS value (can use % or other units)
  modelPath?: string; // Path to the 3D model
  backgroundColor?: string; // Background color for the scene
  robotColor?: string; // Color of the robot
  robotEmissive?: string; // Emissive color of the robot
  robotSpecular?: string; // Specular color of the robot
  className?: string; // Additional CSS classes
  animationIndex?: number; // Index of animation to play (if model has multiple animations)
}

// Default values for props
const {
  width = "100%",
  height = "100%",
  className = "",
} = Astro.props;
---

<div
  class={`heavy-robot-model-viewer-container group ${className}`}
  style={`--width: ${width}; --height: ${height};`}
>
  <!-- Grid overlay for texture -->
  <div class="grid-overlay"></div>

  <div id="heavy-robot-animation-container" class="model-display-container">
    <div class="loading-container">
      <progress id="heavy-progress-bar" value="0" max="100"></progress>
    </div>
  </div>
</div>

<!-- Use client:only to ensure this script runs only in the browser -->
<script>
  // Import Three.js properly using ES modules
  import * as THREE from "three";
  import { GLTFLoader } from "three/examples/jsm/loaders/GLTFLoader.js";
  import { DRACOLoader } from "three/examples/jsm/loaders/DRACOLoader.js";
  import { OrbitControls } from "three/examples/jsm/controls/OrbitControls.js";

  // DOM elements
  const container = document.querySelector(
    ".heavy-robot-model-viewer-container"
  );
  const modelContainer = document.getElementById(
    "heavy-robot-animation-container"
  );
  const progressBar = document.getElementById("heavy-progress-bar");
  const loadingContainer = modelContainer?.querySelector(".loading-container");

  // Get container dimensions
  const getContainerSize = () => {
    if (!container) {
      throw new Error("Container not found");
    }
    const rect = container.getBoundingClientRect();
    if (!rect) {
      throw new Error("Container not found");
    }
    return {
      width: rect.width,
      height: rect.height,
      aspectRatio: rect.width / rect.height,
    };
  };

  // Get container properties
  let { width, height, aspectRatio } = getContainerSize();
  if (!width || !height || !aspectRatio) {
    throw new Error("Container size not found");
  }
  const backgroundColor = "#000000";
  const robotColor = "#444444";
  const robotEmissive = "#111111";
  const robotSpecular = "#aaaaaa";

  // Variables
  let _robot: THREE.Group;
  let _mixerRobot: THREE.AnimationMixer;
  let controls: OrbitControls;
  let camera: THREE.PerspectiveCamera;
  let renderer: THREE.WebGLRenderer;
  let scene: THREE.Scene;
  let clock = new THREE.Clock();
  let animatedLights: any;

  // Mouse lighting system
  let mousePointLight: THREE.PointLight | null = null;
  let hemisphereLight: THREE.HemisphereLight | null = null;
  let raycaster: THREE.Raycaster | null = null;
  let mouseVector: THREE.Vector2 | null = null;
  let lightPosition: THREE.Vector3 = new THREE.Vector3();
  let isMouseOver = false;

  // Throttle for mouse raycasting (~30fps = 33ms)
  let lastRaycastTime = 0;
  const RAYCAST_THROTTLE_MS = 33;
  let pendingMousePosition: { x: number; y: number } | null = null;

  // Initialize scene
  function initScene() {
    // Convert hex color to THREE.js color
    const bgColor = new THREE.Color(backgroundColor);

    // Simple scene setup
    scene = new THREE.Scene();
    scene.background = bgColor;

    camera = new THREE.PerspectiveCamera(75, aspectRatio, 0.1, 1000);

    // Disable antialiasing on large viewports (>1080p) for performance
    const isLargeViewport = width > 1920 || height > 1080;

    renderer = new THREE.WebGLRenderer({
      antialias: !isLargeViewport, // Disable AA on large screens
      powerPreference: "high-performance",
      precision: "mediump", // Medium precision is sufficient and faster
    });

    renderer.setSize(width, height);
    renderer.setPixelRatio(Math.min(window.devicePixelRatio, 2));
    renderer.shadowMap.enabled = true;
    renderer.shadowMap.type = THREE.BasicShadowMap; // Faster than PCFSoftShadowMap

    if (modelContainer) {
      // Remove any existing canvas
      const existingCanvas = modelContainer.querySelector("canvas");
      if (existingCanvas) {
        modelContainer.removeChild(existingCanvas);
      }
      modelContainer.appendChild(renderer.domElement);
    }

    // Camera position adjusted to match the new robot position
    camera.position.set(-20, -40, 10); // Positioned on Z-axis to look at robot

    // Add OrbitControls with specific limitations
    controls = new OrbitControls(camera, renderer.domElement);

    // Set target position to match the new robot position
    // The robot is at (0, -0.5, -75) with scale 0.025, so we need to focus there
    controls.target = new THREE.Vector3(0, 5, -75);

    // Allow full rotation horizontally (around y-axis)
    controls.enableRotate = true;
    controls.minAzimuthAngle = -Infinity;
    controls.maxAzimuthAngle = Infinity;

    // Restrict vertical rotation (around x-axis)
    controls.minPolarAngle = Math.PI / 4; // Allow more up-down rotation
    controls.maxPolarAngle = (3 * Math.PI) / 4;

    // Disable zoom to allow page scrolling
    controls.enableZoom = false;
    controls.enablePan = false;

    // Add damping for smoother controls
    controls.enableDamping = true;
    controls.dampingFactor = 0.05;

    // Force an initial update to apply these settings
    // controls.update();

    // Optimized lighting setup for heavy robot
    // Ambient light - keep it low for drama
    const ambientLight = new THREE.AmbientLight(0x404040, 0.3);
    scene.add(ambientLight);

    // KEY LIGHT - Main directional light (strong, from top-right)
    const mainLight = new THREE.DirectionalLight(0xffffff, 1.5);
    mainLight.position.set(3, 5, 4);
    mainLight.castShadow = true;
    mainLight.shadow.mapSize.width = 512;
    mainLight.shadow.mapSize.height = 512;
    scene.add(mainLight);

    // FILL LIGHT - Softer light from opposite side
    const fillLight = new THREE.DirectionalLight(0x8899ff, 0.4);
    fillLight.position.set(-3, 2, 2);
    scene.add(fillLight);

    // CYAN ACCENT - Point light for color pop
    const cyanAccent = new THREE.PointLight(0x00ffff, 0.8, 10);
    cyanAccent.position.set(-2, 1, 3);
    scene.add(cyanAccent);

    // MAGENTA ACCENT - Point light for complementary color
    const magentaAccent = new THREE.PointLight(0xff00ff, 0.6, 10);
    magentaAccent.position.set(2, 0.5, -2);
    scene.add(magentaAccent);

    // RIM LIGHT - Strong backlight for silhouette definition
    const rimLight = new THREE.DirectionalLight(0xffffff, 0.8);
    rimLight.position.set(0, 3, -5);
    scene.add(rimLight);

    // Mouse-based lighting system
    mousePointLight = new THREE.PointLight(0xff6600, 0, 30, 1.0);
    mousePointLight.position.set(0, 5, 5);
    scene.add(mousePointLight);

    hemisphereLight = new THREE.HemisphereLight(0xffaa44, 0x442200, 0);
    scene.add(hemisphereLight);

    // Initialize raycaster for mouse-to-3D mapping
    raycaster = new THREE.Raycaster();
    mouseVector = new THREE.Vector2();

    // Store lights for subtle animation (no spotlight for performance)
    animatedLights = {
      cyanAccent,
      magentaAccent
    };
  }

  // Handle window resize
  function handleResize() {
    const {
      width: newWidth,
      height: newHeight,
      aspectRatio: newAspectRatio,
    } = getContainerSize();

    // Update variables
    width = newWidth;
    height = newHeight;
    aspectRatio = newAspectRatio;

    // Update camera
    camera.aspect = aspectRatio;
    camera.updateProjectionMatrix();

    // Update renderer
    renderer.setSize(width, height);
    renderer.setPixelRatio(Math.min(window.devicePixelRatio, 2));

    // Render scene
    renderer.render(scene, camera);
  }

  // Initialize everything when DOM is loaded
  function init() {
    initScene();

    // Loading manager for tracking progress
    const manager = new THREE.LoadingManager();

    manager.onProgress = (_url, loaded, total) => {
      if (progressBar instanceof HTMLProgressElement) {
        progressBar.value = (loaded / total) * 100;
      }
    };

    manager.onLoad = () => {
      if (loadingContainer instanceof HTMLElement) {
        loadingContainer.style.display = "none";
      }
    };

    // Configure Draco loader for compressed models
    const dracoLoader = new DRACOLoader();
    dracoLoader.setDecoderPath('https://www.gstatic.com/draco/versioned/decoders/1.5.7/');
    dracoLoader.preload();

    // Load robot model with Draco support
    const loader = new GLTFLoader(manager);
    loader.setDRACOLoader(dracoLoader);
    loader.load(
      "/models/kuma_heavy_robot_draco.glb", // Draco-compressed model
      async (glb) => {
        _robot = glb.scene;

        // Create material with customized properties
        const newMaterial = new THREE.MeshPhongMaterial({
          color: new THREE.Color(robotColor),
          emissive: new THREE.Color(robotEmissive),
          specular: new THREE.Color(robotSpecular),
          shininess: 20, // Higher shininess for a metallic look
          flatShading: false, // Smooth shading for a more polished appearance
        });

        // Apply material to all meshes in the model
        _robot.traverse((o) => {
          if (o instanceof THREE.Mesh) {
            // Override the material
            o.material = newMaterial;
            o.castShadow = true;
            o.receiveShadow = true;
          }
        });

        // Position and scale the robot
        // These values may need adjustment based on the actual model
        _robot.position.set(0, -0.5, -75);
        _robot.rotation.set(0, Math.PI / 2, 0); // Rotate to face the camera
        _robot.scale.set(0.025, 0.025, 0.025);

        scene.add(_robot);

        // Set up animation
        if (glb.animations.length > 0) {
          _mixerRobot = new THREE.AnimationMixer(_robot);
          _mixerRobot.timeScale = 1.5; // Slightly faster animation for a heavier feel

          // Use the specified animation or default to the first one
          const animIndex = Math.min(glb.animations.length - 1, 0);
          const clip = glb.animations[animIndex];

          if (clip) {
            // Create and play the animation action
            const action = _mixerRobot.clipAction(clip);
            action.play();

            // Optional: Create a smoother loop
            action.loop = THREE.LoopRepeat;
            action.clampWhenFinished = false;
            action.zeroSlopeAtStart = true;
            action.zeroSlopeAtEnd = true;
          }
        }
      },
      undefined, // Progress callback not needed
      undefined // Error callback - model loading errors handled silently
    );

    // Animation loop
    function animate() {
      requestAnimationFrame(animate);

      // Update animation mixer
      const delta = clock.getDelta();
      const elapsed = clock.getElapsedTime();

      if (_mixerRobot) {
        _mixerRobot.update(delta);
      }

      // Subtle light animations (optimized for performance)
      if (animatedLights) {
        // Slowly rotate cyan accent
        const cyanAngle = elapsed * 0.2;
        animatedLights.cyanAccent.position.x = Math.cos(cyanAngle) * 3;
        animatedLights.cyanAccent.position.z = Math.sin(cyanAngle) * 3;
      }

      // Update controls
      if (controls) {
        controls.update();
      }

      // Add subtle rotation to robot if not being actively controlled
      if (_robot && !controls.enableDamping) {
        _robot.rotation.y += 0.003; // Very slow automatic rotation
      }

      // Process any pending mouse position (from throttled updates)
      if (pendingMousePosition && isMouseOver) {
        updateLighting(pendingMousePosition.x, pendingMousePosition.y, true);
      }

      // Render
      renderer.render(scene, camera);
    }

    animate();

    // Add resize event listener
    window.addEventListener("resize", handleResize);

    // Create a ResizeObserver to watch for container size changes
    const resizeObserver = new ResizeObserver(() => {
      handleResize();
    });

    // Start observing the container
    if (container) {
      resizeObserver.observe(container);
    }

    // Helper function to update lighting based on position (with throttling)
    function updateLighting(clientX: number, clientY: number, forceUpdate = false) {
      if (!mouseVector || !raycaster || !camera || !_robot || !mousePointLight || !hemisphereLight || !modelContainer) return;

      const now = performance.now();

      // Throttle raycasting to ~30fps for performance
      if (!forceUpdate && now - lastRaycastTime < RAYCAST_THROTTLE_MS) {
        // Store position for next allowed update
        pendingMousePosition = { x: clientX, y: clientY };
        return;
      }

      lastRaycastTime = now;
      pendingMousePosition = null;

      const rect = modelContainer.getBoundingClientRect();
      const x = ((clientX - rect.left) / rect.width) * 2 - 1;
      const y = -((clientY - rect.top) / rect.height) * 2 + 1;

      mouseVector.x = x;
      mouseVector.y = y;

      raycaster.setFromCamera(mouseVector, camera);
      const intersects = raycaster.intersectObject(_robot, true);

      let distance = 50;
      let intensityMultiplier = 1.0;
      const robotCenter = new THREE.Vector3(0, 5, -75);

      if (intersects.length > 0) {
        const intersectPoint = intersects[0].point;
        const distanceToIntersect = camera.position.distanceTo(intersectPoint);
        distance = distanceToIntersect * 0.4;

        const distanceFromCenter = intersectPoint.distanceTo(robotCenter);
        if (distanceFromCenter < 10) {
          intensityMultiplier = 2.0;
        } else if (distanceFromCenter < 20) {
          intensityMultiplier = 1.0 + (1.0 - (distanceFromCenter - 10) / 10);
        }
      }

      const targetPosition = new THREE.Vector3();
      targetPosition.copy(raycaster.ray.direction);
      targetPosition.multiplyScalar(distance);
      targetPosition.add(raycaster.ray.origin);

      lightPosition.lerp(targetPosition, 0.25);
      mousePointLight.position.copy(lightPosition);

      // Increase light visibility
      const baseIntensity = 15.0;
      const targetIntensity = baseIntensity * intensityMultiplier;

      if (mousePointLight.intensity < targetIntensity) {
        mousePointLight.intensity += 0.7;
      }

      if (hemisphereLight.intensity < 0.6) {
        hemisphereLight.intensity += 0.04;
      }
    }

    // Mouse event handlers for lighting system
    if (modelContainer && mouseVector && raycaster) {
      modelContainer.addEventListener('mouseenter', () => {
        isMouseOver = true;
        if (mousePointLight && hemisphereLight) {
          mousePointLight.intensity = 0;
          hemisphereLight.intensity = 0;
        }
      });

      modelContainer.addEventListener('mouseleave', () => {
        isMouseOver = false;
        fadeOutLights();
      });

      modelContainer.addEventListener('mousemove', (event) => {
        if (!isMouseOver) return;
        updateLighting(event.clientX, event.clientY);
      });

      // Touch event handlers for mobile support
      modelContainer.addEventListener('touchstart', (event) => {
        isMouseOver = true;
        if (mousePointLight && hemisphereLight) {
          mousePointLight.intensity = 0;
          hemisphereLight.intensity = 0;
        }
        if (event.touches.length > 0) {
          event.preventDefault();
          updateLighting(event.touches[0].clientX, event.touches[0].clientY);
        }
      });

      modelContainer.addEventListener('touchmove', (event) => {
        if (event.touches.length > 0) {
          event.preventDefault();
          updateLighting(event.touches[0].clientX, event.touches[0].clientY);
        }
      });

      modelContainer.addEventListener('touchend', () => {
        isMouseOver = false;
        fadeOutLights();
      });
    }

    // Fade out lights when mouse is inactive
    let mouseTimeout: number | null = null;
    if (modelContainer) {
      modelContainer.addEventListener('mousemove', () => {
        if (mouseTimeout) clearTimeout(mouseTimeout);
        mouseTimeout = window.setTimeout(() => {
          if (isMouseOver) {
            fadeOutLights();
          }
        }, 2000);
      });
    }

    // ===== LISTEN FOR PAGE-LEVEL EVENTS (for hero section integration) =====
    // This allows the model to respond to mouse events from the hero overlay
    document.addEventListener('projectsRobotMouseMove', (e: any) => {
      if (e.detail && mousePointLight && hemisphereLight && raycaster && mouseVector && camera && _robot) {
        const { clientX, clientY } = e.detail;
        updateLighting(clientX, clientY);
      }
    });

    document.addEventListener('projectsRobotMouseInactive', () => {
      fadeOutLights();
    });

    document.addEventListener('projectsRobotMouseLeave', () => {
      isMouseOver = false;
      fadeOutLights();
    });

    document.addEventListener('projectsRobotMouseEnter', () => {
      isMouseOver = true;
      if (mousePointLight && hemisphereLight) {
        mousePointLight.intensity = 0;
        hemisphereLight.intensity = 0;
      }
    });
  }

  function fadeOutLights() {
    if (!mousePointLight || !hemisphereLight) return;

    const fadeOut = () => {
      if (mousePointLight && hemisphereLight) {
        if (mousePointLight.intensity > 0.1 || hemisphereLight.intensity > 0.01) {
          mousePointLight.intensity *= 0.9;
          hemisphereLight.intensity *= 0.9;
          requestAnimationFrame(fadeOut);
        } else {
          mousePointLight.intensity = 0;
          hemisphereLight.intensity = 0;
        }
      }
    };
    fadeOut();
  }

  // Initialize when DOM is loaded
  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", init);
  } else {
    init();
  }
</script>

<style>
  .heavy-robot-model-viewer-container {
    display: flex;
    height: var(--height, 100%);
    width: var(--width, 100%);
    position: relative;
  }

  /* Grid overlay - subtle tech grid texture */
  .grid-overlay {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(rgba(255, 255, 255, 0.02) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255, 255, 255, 0.02) 1px, transparent 1px);
    background-size: 50px 50px;
    pointer-events: none;
    z-index: 11;
    opacity: 0.5;
  }

  #heavy-robot-animation-container {
    width: 100%;
    height: 100%;
    position: relative;
  }

  #heavy-robot-animation-container canvas {
    width: 100% !important;
    height: 100% !important;
    display: block;
  }

  /* Seamless container - no borders, blends with page */
  .model-display-container {
    overflow: hidden;
    background: #000000;
    z-index: 10;
    width: 100%;
    height: 100%;
  }

  .loading-container {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100%;
    text-align: center;
    z-index: 20;
  }

  #heavy-progress-bar {
    width: 80%;
    height: 8px;
    border-radius: 4px;
    overflow: hidden;
  }

  #heavy-progress-bar::-webkit-progress-bar {
    background-color: rgba(0, 0, 0, 0.1);
  }

  #heavy-progress-bar::-webkit-progress-value {
    background-color: rgba(255, 255, 255, 0.5);
  }
</style>

---
// RobotModelViewer.astro with enhanced styles for expanded view
// Props for customization
interface Props {
  width?: string; // Container width as CSS value (can use % or other units)
  height?: string; // Container height as CSS value (can use % or other units)
  modelPath?: string; // Path to the 3D model
  backgroundColor?: string; // Background color for the scene
  robotColor?: string; // Color of the robot
  robotEmissive?: string; // Emissive color of the robot
  robotSpecular?: string; // Specular color of the robot
  className?: string; // Additional CSS classes
}

// Default values for props
const {
  width = "100%",
  height = "100%",
  // modelPath = "models/robot_playground.glb",
  // backgroundColor = "#000000",
  // robotColor = "#000000",
  // robotEmissive = "#000000",
  // robotSpecular = "#ffffff",
  className = "",
} = Astro.props;
---

<div
  class={`robot-model-viewer-container group ${className}`}
  style={`--width: ${width}; --height: ${height};`}
>
  <div id="robot-animation-container" class="model-display-container">
    <div class="loading-container">
      <progress id="progress-bar" value="0" max="100"></progress>
    </div>
  </div>
</div>

<!-- Use client:only to ensure this script runs only in the browser -->
<script>
  // Import Three.js properly using ES modules
  import * as THREE from "three";
  import { GLTFLoader } from "three/examples/jsm/loaders/GLTFLoader.js";
  import { OrbitControls } from "three/examples/jsm/controls/OrbitControls.js";

  // DOM elements
  const container = document.querySelector(".robot-model-viewer-container");
  const modelContainer = document.getElementById("robot-animation-container");
  const progressBar = document.getElementById("progress-bar");
  const loadingContainer = document.querySelector("div.loading-container");

  // Get container dimensions
  const getContainerSize = () => {
    if (!container) {
      throw new Error("Container not found");
    }
    const rect = container.getBoundingClientRect();
    if (!rect) {
      throw new Error("Container not found");
    }
    return {
      width: rect.width,
      height: rect.height,
      aspectRatio: rect.width / rect.height,
    };
  };

  // Get container properties
  let { width, height, aspectRatio } = getContainerSize();
  if (!width || !height || !aspectRatio) {
    throw new Error("Container size not found");
  }
  const backgroundColor = "#000000";
  const robotColor = "#000000";
  const robotEmissive = "#000000";
  const robotSpecular = "#ffffff";

  // Variables
  let _robot: THREE.Group;
  let _mixerRobot: THREE.AnimationMixer;
  let controls: OrbitControls;
  let camera: THREE.PerspectiveCamera;
  let renderer: THREE.WebGLRenderer;
  let scene: THREE.Scene;
  let clock = new THREE.Clock();
  let animatedLights: any;
  let mousePointLight: THREE.PointLight | null = null;
  let hemisphereLight: THREE.HemisphereLight | null = null;
  let raycaster: THREE.Raycaster | null = null;
  let mouseVector: THREE.Vector2 | null = null;
  let lightPosition: THREE.Vector3 = new THREE.Vector3();

  // Initialize scene
  function initScene() {
    // Convert hex color to THREE.js color
    const bgColor = new THREE.Color(backgroundColor);

    // Simple scene setup
    scene = new THREE.Scene();
    scene.background = bgColor;

    camera = new THREE.PerspectiveCamera(75, aspectRatio, 0.1, 1000);
    renderer = new THREE.WebGLRenderer({
      antialias: true,
      powerPreference: "high-performance",
      precision: "highp",
    });

    renderer.setSize(width, height);
    renderer.setPixelRatio(window.devicePixelRatio);
    renderer.shadowMap.enabled = true;
    renderer.shadowMap.type = THREE.PCFSoftShadowMap;

    if (modelContainer) {
      // Remove any existing canvas
      const existingCanvas = modelContainer.querySelector("canvas");
      if (existingCanvas) {
        modelContainer.removeChild(existingCanvas);
      }
      modelContainer.appendChild(renderer.domElement);
    }

    // Camera position
    camera.position.set(0, 0.5, 4.5);

    // Add OrbitControls with specific limitations
    controls = new OrbitControls(camera, renderer.domElement);

    // Set initial position
    controls.target = new THREE.Vector3(0, 0, 0);

    // Allow full rotation horizontally (around y-axis)
    controls.enableRotate = true;
    controls.minAzimuthAngle = -Infinity;
    controls.maxAzimuthAngle = Infinity;

    // Restrict vertical rotation (around x-axis)
    controls.minPolarAngle = Math.PI / 2 - 0.3; // About 17 degrees up
    controls.maxPolarAngle = Math.PI / 2 + 0.3; // About 17 degrees down

    // Disable panning
    controls.enablePan = false;

    // Optional: Limit zoom if needed
    controls.minDistance = 3.0;
    controls.maxDistance = 6.0;

    // Add damping for smoother controls
    controls.enableDamping = true;
    controls.dampingFactor = 0.05;

    // DRAMATICALLY DIMMED LIGHTING - Create mystery and darkness
    // Ambient light - extremely low for darkness
    const ambientLight = new THREE.AmbientLight(0x202020, 0.05);
    scene.add(ambientLight);

    // KEY LIGHT - Much weaker now
    const mainLight = new THREE.DirectionalLight(0xffffff, 0.3);
    mainLight.position.set(3, 5, 4);
    mainLight.castShadow = true;
    mainLight.shadow.mapSize.width = 2048;
    mainLight.shadow.mapSize.height = 2048;
    mainLight.shadow.bias = -0.001;
    mainLight.shadow.camera.near = 0.5;
    mainLight.shadow.camera.far = 20;
    mainLight.shadow.camera.left = -5;
    mainLight.shadow.camera.right = 5;
    mainLight.shadow.camera.top = 5;
    mainLight.shadow.camera.bottom = -5;
    scene.add(mainLight);

    // FILL LIGHT - Barely visible
    const fillLight = new THREE.DirectionalLight(0x8899ff, 0.08);
    fillLight.position.set(-3, 2, 2);
    scene.add(fillLight);

    // CYAN ACCENT - Very subtle
    const cyanAccent = new THREE.PointLight(0x00ffff, 0.2, 10);
    cyanAccent.position.set(-2, 1, 3);
    scene.add(cyanAccent);

    // MAGENTA ACCENT - Very subtle
    const magentaAccent = new THREE.PointLight(0xff00ff, 0.15, 10);
    magentaAccent.position.set(2, 0.5, -2);
    scene.add(magentaAccent);

    // RIM LIGHT - Weak backlight
    const rimLight = new THREE.DirectionalLight(0xffffff, 0.2);
    rimLight.position.set(0, 3, -5);
    scene.add(rimLight);

    // ANIMATED SPOTLIGHT - Much dimmer
    const spotlight = new THREE.SpotLight(0xffffff, 0.3);
    spotlight.position.set(0, 6, 0);
    spotlight.angle = Math.PI / 6;
    spotlight.penumbra = 0.5;
    spotlight.decay = 2;
    spotlight.distance = 20;
    spotlight.castShadow = true;
    scene.add(spotlight);

    // INVISIBLE LIGHTING SYSTEM - No visible geometry, just light
    // Add a powerful point light that follows mouse - PRIMARY LIGHT SOURCE
    // Red-orange-yellow gradient light
    mousePointLight = new THREE.PointLight(0xff6600, 0, 30, 1.0);
    mousePointLight.position.set(0, 5, 5);
    scene.add(mousePointLight);

    // Add hemisphere light for better ambient distribution
    hemisphereLight = new THREE.HemisphereLight(0xffaa44, 0x442200, 0);
    scene.add(hemisphereLight);

    // Initialize raycaster for precise mouse-to-3D mapping
    raycaster = new THREE.Raycaster();
    mouseVector = new THREE.Vector2();

    // Store lights for animation
    animatedLights = {
      spotlight,
      cyanAccent,
      magentaAccent,
      mousePointLight
    };
  }

  // Handle window resize
  function handleResize() {
    const {
      width: newWidth,
      height: newHeight,
      aspectRatio: newAspectRatio,
    } = getContainerSize();

    // Update variables
    width = newWidth;
    height = newHeight;
    aspectRatio = newAspectRatio;

    // Update camera
    camera.aspect = aspectRatio;
    camera.updateProjectionMatrix();

    // Update renderer
    renderer.setSize(width, height);
    renderer.setPixelRatio(window.devicePixelRatio);

    // Render scene
    renderer.render(scene, camera);
  }

  // Initialize everything when DOM is loaded
  function init() {
    initScene();

    // Loading manager for tracking progress
    const manager = new THREE.LoadingManager();

    manager.onProgress = (url, loaded, total) => {
      if (progressBar instanceof HTMLProgressElement) {
        progressBar.value = (loaded / total) * 100;
      }
    };

    if (loadingContainer instanceof HTMLElement) {
      loadingContainer.style.display = "none";
    }

    // Load robot model
    const loader = new GLTFLoader(manager);
    loader.load(
      "/models/robot_playground.glb",
      async (glb) => {
        _robot = glb.scene;

        // Create material with customized properties
        const newMaterial = new THREE.MeshPhongMaterial({
          color: new THREE.Color(robotColor),
          emissive: new THREE.Color(robotEmissive),
          specular: new THREE.Color(robotSpecular),
          shininess: 15,
          flatShading: true,
        });

        // Apply material to all meshes in the model
        _robot.traverse((o) => {
          if (o instanceof THREE.Mesh) {
            o.material = newMaterial;
            o.castShadow = true;
            o.receiveShadow = true;
          }
        });

        // Position and scale the robot
        _robot.position.set(0, -0.4, 0);
        _robot.scale.set(1.5, 1.5, 1.5);

        scene.add(_robot);

        // Set up animation
        _mixerRobot = new THREE.AnimationMixer(_robot);
        _mixerRobot.timeScale = 1;

        if (glb.animations.length > 0) {
          _mixerRobot.clipAction(glb.animations[0]).play();
        }
      },
      undefined, // Progress callback not needed
      undefined // Error callback - model loading errors handled silently
    );

    // Animation loop
    function animate() {
      requestAnimationFrame(animate);

      // Update animation mixer
      const delta = clock.getDelta();
      const elapsed = clock.getElapsedTime();

      if (_mixerRobot) {
        _mixerRobot.update(delta);
      }

      // Animate lights for subtle dramatic effect (much dimmer)
      if (animatedLights) {
        // Subtle pulse spotlight intensity
        animatedLights.spotlight.intensity = 0.25 + Math.sin(elapsed * 0.8) * 0.08;

        // Slowly rotate cyan accent
        const cyanAngle = elapsed * 0.3;
        animatedLights.cyanAccent.position.x = Math.cos(cyanAngle) * 3;
        animatedLights.cyanAccent.position.z = Math.sin(cyanAngle) * 3;

        // Subtle pulse magenta accent
        animatedLights.magentaAccent.intensity = 0.12 + Math.sin(elapsed * 1.2) * 0.05;
      }


      // Update controls
      if (controls) {
        controls.update();
      }

      // Render
      renderer.render(scene, camera);
    }

    animate();

    // Add resize event listener
    window.addEventListener("resize", handleResize);

    // Create a ResizeObserver to watch for container size changes
    const resizeObserver = new ResizeObserver(() => {
      handleResize();
    });

    // Start observing the container
    if (container) {
      resizeObserver.observe(container);
    }

    // ===== INVISIBLE LIGHTING SYSTEM WITH RAYCASTING =====
    // Listen for mouse movement events from Home.astro
    document.addEventListener('robotMouseMove', (e: any) => {
      if (e.detail && mousePointLight && hemisphereLight && raycaster && mouseVector && camera && _robot) {
        const { x, y } = e.detail; // Normalized 0-1 coordinates

        // Convert to normalized device coordinates (-1 to +1)
        mouseVector.x = (x * 2) - 1;
        mouseVector.y = -(y * 2) + 1; // Inverted for WebGL

        // Update raycaster with mouse position
        raycaster.setFromCamera(mouseVector, camera);

        // Check if ray intersects with robot
        const intersects = raycaster.intersectObject(_robot, true);

        let distance = 4.5; // Default distance
        let intensityMultiplier = 1.0; // Normal intensity
        const robotCenter = new THREE.Vector3(0, -0.4, 0); // Robot's center position

        if (intersects.length > 0) {
          // Mouse is over robot - position light between camera and intersection point
          const intersectPoint = intersects[0].point;
          const distanceToIntersect = camera.position.distanceTo(intersectPoint);

          // Position light much further from robot (30% of the way from camera)
          distance = distanceToIntersect * 0.3;

          // Check distance from intersection point to robot center
          const distanceFromCenter = intersectPoint.distanceTo(robotCenter);

          // If within 0.6 units of center, boost intensity significantly
          if (distanceFromCenter < 0.6) {
            intensityMultiplier = 2.0; // Double intensity over center
          } else if (distanceFromCenter < 1.0) {
            // Gradual falloff from center
            intensityMultiplier = 1.0 + (1.0 - (distanceFromCenter - 0.6) / 0.4);
          }
        }

        // Position light at calculated distance along ray
        const targetPosition = new THREE.Vector3();
        targetPosition.copy(raycaster.ray.direction);
        targetPosition.multiplyScalar(distance);
        targetPosition.add(raycaster.ray.origin);

        // Smoothly interpolate light position
        lightPosition.lerp(targetPosition, 0.25);
        mousePointLight.position.copy(lightPosition);

        // Determine target intensity based on center proximity
        const baseIntensity = 18.0;
        const targetIntensity = baseIntensity * intensityMultiplier;

        // Increase point light intensity - PRIMARY LIGHT SOURCE
        if (mousePointLight.intensity < targetIntensity) {
          mousePointLight.intensity += 0.8;
        }

        // Increase hemisphere light for better ambient distribution
        if (hemisphereLight.intensity < 0.8) {
          hemisphereLight.intensity += 0.05;
        }
      }
    });

    // Slowly fade out light when mouse becomes inactive (slow for admiration)
    document.addEventListener('robotMouseInactive', () => {
      if (mousePointLight && hemisphereLight) {
        const fadeOut = () => {
          if (mousePointLight && hemisphereLight) {
            // Slower fade for psychology - let user admire
            if (mousePointLight.intensity > 0.1 || hemisphereLight.intensity > 0.01) {
              mousePointLight.intensity *= 0.93;
              hemisphereLight.intensity *= 0.93;
              requestAnimationFrame(fadeOut);
            } else {
              mousePointLight.intensity = 0;
              hemisphereLight.intensity = 0;
            }
          }
        };
        fadeOut();
      }
    });

    // Fade out when mouse leaves (slightly faster than inactive)
    document.addEventListener('robotMouseLeave', () => {
      if (mousePointLight && hemisphereLight) {
        const fadeOut = () => {
          if (mousePointLight && hemisphereLight) {
            if (mousePointLight.intensity > 0.05 || hemisphereLight.intensity > 0.01) {
              mousePointLight.intensity *= 0.9;
              hemisphereLight.intensity *= 0.9;
              requestAnimationFrame(fadeOut);
            } else {
              mousePointLight.intensity = 0;
              hemisphereLight.intensity = 0;
            }
          }
        };
        fadeOut();
      }
    });

    // Reset light when mouse enters
    document.addEventListener('robotMouseEnter', () => {
      if (mousePointLight && hemisphereLight) {
        mousePointLight.intensity = 0;
        hemisphereLight.intensity = 0;
      }
    });
  }

  // Initialize when DOM is loaded
  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", init);
  } else {
    init();
  }
</script>

<style>
  .robot-model-viewer-container {
    display: flex;
    height: var(--height, 100%);
    width: var(--width, 100%);
    position: relative;
  }

  #robot-animation-container {
    width: 100%;
    height: 100%;
    position: relative;
  }

  #robot-animation-container canvas {
    width: 100% !important;
    height: 100% !important;
    display: block;
  }

  .model-display-container {
    overflow: hidden;
    background: #000000;
    z-index: 10;
    width: 100%;
    height: 100%;
  }

  .loading-container {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100%;
    text-align: center;
    z-index: 20;
  }

  #progress-bar {
    width: 80%;
    height: 8px;
    border-radius: 4px;
    overflow: hidden;
  }

  #progress-bar::-webkit-progress-bar {
    background-color: rgba(0, 0, 0, 0.1);
  }

  #progress-bar::-webkit-progress-value {
    background-color: rgba(var(--color-primary, 75, 85, 99), 0.8);
  }
</style>
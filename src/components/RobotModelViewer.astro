---
// RobotModelViewer.astro
// Props for customization
interface Props {
  width?: string; // Container width as CSS value (can use % or other units)
  height?: string; // Container height as CSS value (can use % or other units)
  modelPath?: string; // Path to the 3D model
  backgroundColor?: string; // Background color for the scene
  robotColor?: string; // Color of the robot
  robotEmissive?: string; // Emissive color of the robot
  robotSpecular?: string; // Specular color of the robot
  className?: string; // Additional CSS classes
}

// Default values for props
const {
  width = "100%",
  height = "100%",
  // modelPath = "models/robot_playground.glb",
  // backgroundColor = "#000000",
  // robotColor = "#000000",
  // robotEmissive = "#000000",
  // robotSpecular = "#ffffff",
  className = "",
} = Astro.props;
---

<div
  class={`robot-model-viewer-container group ${className}`}
  style={`--width: ${width}; --height: ${height};`}
>
  <div id="robot-animation-container" class="model-display-container">
    <div class="loading-container">
      <progress id="progress-bar" value="0" max="100"></progress>
    </div>
  </div>
</div>

<!-- Use client:only to ensure this script runs only in the browser -->
<script>
  // Import Three.js properly using ES modules
  import * as THREE from "three";
  import { GLTFLoader } from "three/examples/jsm/loaders/GLTFLoader.js";
  import { OrbitControls } from "three/examples/jsm/controls/OrbitControls.js";

  // DOM elements
  const container = document.querySelector(".robot-model-viewer-container");
  const modelContainer = document.getElementById("robot-animation-container");
  const progressBar = document.getElementById("progress-bar");
  const loadingContainer = document.querySelector("div.loading-container");

  // Get container dimensions
  const getContainerSize = () => {
    if (!container) {
      throw new Error("Container not found");
    }
    const rect = container.getBoundingClientRect();
    if (!rect) {
      throw new Error("Container not found");
    }
    return {
      width: rect.width,
      height: rect.height,
      aspectRatio: rect.width / rect.height,
    };
  };

  // Get container properties
  let { width, height, aspectRatio } = getContainerSize();
  if (!width || !height || !aspectRatio) {
    throw new Error("Container size not found");
  }
  const backgroundColor = "#000000";
  const robotColor = "#000000";
  const robotEmissive = "#000000";
  const robotSpecular = "#ffffff";

  // Variables
  let _robot: THREE.Group;
  let _mixerRobot: THREE.AnimationMixer;
  let controls: OrbitControls;
  let camera: THREE.PerspectiveCamera;
  let renderer: THREE.WebGLRenderer;
  let scene: THREE.Scene;
  let clock = new THREE.Clock();

  // Initialize scene
  function initScene() {
    // Convert hex color to THREE.js color
    const bgColor = new THREE.Color(backgroundColor);

    // Simple scene setup
    scene = new THREE.Scene();
    scene.background = bgColor;

    camera = new THREE.PerspectiveCamera(75, aspectRatio, 0.1, 1000);
    renderer = new THREE.WebGLRenderer({
      antialias: true,
      powerPreference: "high-performance",
      precision: "highp",
    });

    renderer.setSize(width, height);
    renderer.setPixelRatio(window.devicePixelRatio);
    renderer.shadowMap.enabled = true;
    renderer.shadowMap.type = THREE.PCFSoftShadowMap;

    if (modelContainer) {
      // Remove any existing canvas
      const existingCanvas = modelContainer.querySelector("canvas");
      if (existingCanvas) {
        modelContainer.removeChild(existingCanvas);
      }
      modelContainer.appendChild(renderer.domElement);
    }

    // Camera position
    camera.position.set(0, 0.5, 4.5);

    // Add OrbitControls with specific limitations
    controls = new OrbitControls(camera, renderer.domElement);

    // Set initial position
    controls.target = new THREE.Vector3(0, 0, 0);

    // Allow full rotation horizontally (around y-axis)
    controls.enableRotate = true;
    controls.minAzimuthAngle = -Infinity;
    controls.maxAzimuthAngle = Infinity;

    // Restrict vertical rotation (around x-axis)
    controls.minPolarAngle = Math.PI / 2 - 0.3; // About 17 degrees up
    controls.maxPolarAngle = Math.PI / 2 + 0.3; // About 17 degrees down

    // Disable panning
    controls.enablePan = false;

    // Optional: Limit zoom if needed
    controls.minDistance = 3.0;
    controls.maxDistance = 6.0;

    // Add damping for smoother controls
    controls.enableDamping = true;
    controls.dampingFactor = 0.05;

    // Lighting setup
    const ambientLight = new THREE.AmbientLight(0xffffff, 0.2);
    scene.add(ambientLight);

    // Main directional light
    const mainLight = new THREE.DirectionalLight(0xffffff, 1.2);
    mainLight.position.set(2, 4, 3);
    mainLight.castShadow = true;
    mainLight.shadow.mapSize.width = 1024;
    mainLight.shadow.mapSize.height = 1024;
    mainLight.shadow.bias = -0.001;
    mainLight.shadow.camera.near = 0.5;
    mainLight.shadow.camera.far = 20;
    mainLight.shadow.camera.left = -5;
    mainLight.shadow.camera.right = 5;
    mainLight.shadow.camera.top = 5;
    mainLight.shadow.camera.bottom = -5;
    scene.add(mainLight);

    // Blue accent light
    const accentLight = new THREE.DirectionalLight(0xffc107, 0.7);
    accentLight.position.set(-3, 2, -3);
    scene.add(accentLight);

    // Rim light
    const rimLight = new THREE.DirectionalLight(0xffddbb, 0.8);
    rimLight.position.set(0, 3, -4);
    scene.add(rimLight);
  }

  // Handle window resize
  function handleResize() {
    const {
      width: newWidth,
      height: newHeight,
      aspectRatio: newAspectRatio,
    } = getContainerSize();

    // Update variables
    width = newWidth;
    height = newHeight;
    aspectRatio = newAspectRatio;

    // Update camera
    camera.aspect = aspectRatio;
    camera.updateProjectionMatrix();

    // Update renderer
    renderer.setSize(width, height);
    renderer.setPixelRatio(window.devicePixelRatio);

    // Render scene
    renderer.render(scene, camera);
  }

  // Initialize everything when DOM is loaded
  function init() {
    initScene();

    // Loading manager for tracking progress
    const manager = new THREE.LoadingManager();

    manager.onProgress = (url, loaded, total) => {
      if (progressBar instanceof HTMLProgressElement) {
        progressBar.value = (loaded / total) * 100;
      }
    };

    if (loadingContainer instanceof HTMLElement) {
      loadingContainer.style.display = "none";
    }

    // Load robot model
    const loader = new GLTFLoader(manager);
    loader.load(
      "/src/models/robot_playground.glb",
      async (glb) => {
        _robot = glb.scene;

        // Create material with customized properties
        const newMaterial = new THREE.MeshPhongMaterial({
          color: new THREE.Color(robotColor),
          emissive: new THREE.Color(robotEmissive),
          specular: new THREE.Color(robotSpecular),
          shininess: 15,
          flatShading: true,
        });

        // Apply material to all meshes in the model
        _robot.traverse((o) => {
          if (o instanceof THREE.Mesh) {
            o.material = newMaterial;
            o.castShadow = true;
            o.receiveShadow = true;
          }
        });

        // Position and scale the robot
        _robot.position.set(0, -0.4, 0);
        _robot.scale.set(1.5, 1.5, 1.5);

        scene.add(_robot);

        // Set up animation
        _mixerRobot = new THREE.AnimationMixer(_robot);
        _mixerRobot.timeScale = 1;

        if (glb.animations.length > 0) {
          _mixerRobot.clipAction(glb.animations[0]).play();
        }
      },
      // Progress callback
      (xhr) => {
        const progress = (xhr.loaded / xhr.total) * 100;
        console.log(`${progress}% loaded`);
      },
      // Error callback
      (error) => {
        console.error("An error happened while loading the model:", error);
      }
    );

    // Animation loop
    function animate() {
      requestAnimationFrame(animate);

      // Update animation mixer
      const delta = clock.getDelta();
      if (_mixerRobot) {
        _mixerRobot.update(delta);
      }

      // Update controls
      if (controls) {
        controls.update();
      }

      // Render
      renderer.render(scene, camera);
    }

    animate();

    // Add resize event listener
    window.addEventListener("resize", handleResize);

    // Create a ResizeObserver to watch for container size changes
    const resizeObserver = new ResizeObserver(() => {
      handleResize();
    });

    // Start observing the container
    if (container) {
      resizeObserver.observe(container);
    }
  }

  // Initialize when DOM is loaded
  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", init);
  } else {
    init();
  }
</script>

<style>
  .robot-model-viewer-container {
    display: flex;
    height: var(--height, 100%);
    width: var(--width, 100%);
    position: relative;
    transition: transform 0.3s ease-out;
  }

  .robot-model-viewer-container:hover {
    transform: translateY(-4px);
  }

  #robot-animation-container {
    width: 100%;
    height: 100%;
    position: relative;
  }

  #robot-animation-container canvas {
    width: 100% !important;
    height: 100% !important;
    display: block;
  }

  .model-display-container {
    border: 1px solid rgba(var(--color-accent, 0, 0, 0), 0.2);
    border-radius: 0.75rem;
    overflow: hidden;
    background-color: rgba(0, 0, 0, 0.95);
    transition: all 0.3s ease-out;
    z-index: 10;
    width: 100%;
    height: 100%;
  }

  .model-display-container:hover {
    background-color: rgba(var(--color-accent, 0, 0, 0), 0.05);
    box-shadow:
      0 20px 25px -5px rgba(0, 0, 0, 0.1),
      0 10px 10px -5px rgba(0, 0, 0, 0.04);
  }

  .robot-model-viewer-container::after {
    content: "";
    position: absolute;
    inset: 0;
    border: 1px solid rgba(var(--color-primary, 0, 0, 0), 0.2);
    border-radius: 0.75rem;
    transform: scale(1);
    transition: all 0.3s ease-out;
    z-index: 0;
  }

  .robot-model-viewer-container:hover::after {
    transform: scale(1.05);
    border-color: rgba(var(--color-primary, 0, 0, 0), 0.4);
  }

  .loading-container {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100%;
    text-align: center;
    z-index: 20;
  }

  #progress-bar {
    width: 80%;
    height: 8px;
    border-radius: 4px;
    overflow: hidden;
  }

  #progress-bar::-webkit-progress-bar {
    background-color: rgba(0, 0, 0, 0.1);
  }

  #progress-bar::-webkit-progress-value {
    background-color: rgba(var(--color-primary, 75, 85, 99), 0.8);
  }
</style>

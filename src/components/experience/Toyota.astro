---
import { Image } from "astro:assets";
import ToyotaHeadquarters from "../../../src/images/experience/toyota/ToyotaHeadquarters.jpg";
import LexusConceptCar from "../../../src/images/experience/toyota/LexusConceptCar.jpg";
import ToyotaConceptCar from "../../../src/images/experience/toyota/ToyotaConceptCar.jpeg";
---

<style>
  /* Adjust the drawer content to appear above other elements */
  .drawer-content {
    z-index: 0; /* High value to ensure it's above others */
    touch-action: auto !important;
  }
</style>

<div class="toyota drawer drawer-end">
  <input id="toyota-drawer" type="checkbox" class="drawer-toggle" />
  <div class="toyota-content drawer-content">
    <!-- Page content here -->
    <div class="flex flex-row mb-2">
      <p class="font-semibold mt-4 sm:text-xl text-md grow w-50">
        Software Systems Engineer @ Toyota
      </p>
      <label
        id="toyota-open-button"
        for="toyota-drawer"
        class="w-12 btn btn-sm btn-primary-content mt-4 font-bold rounded-full"
        >ðŸ”—</label
      >
    </div>
    <span class="text-xs float-right italic font-thin"
      >August 2023 - Current</span
    >
  </div>

  <div class="drawer-side">
    <label
      id="toyota-close-button"
      for="toyota-drawer"
      aria-label="close sidebar"
      class="drawer-overlay"></label>
    <ul
      class="menu p-4 sm:w-8/12 w-11/12 min-h-full bg-base-200 text-base-content"
    >
      <div class="my-2 sm:text-lg text-md">In progress..</div>
    </ul>
  </div>
</div>

<script>
  const toyotaOpenDrawer = document.getElementById("toyota-open-button");
  const toyotaCloseDrawer = document.getElementById("toyota-close-button");

  const toyotaContent = document.querySelector(
    ".toyota-content.drawer-content"
  );

  const nvidiaContent = document.querySelector(
    ".nvidia-content.drawer-content"
  );

  const tesla2Content = document.querySelector(
    ".tesla2-content.drawer-content"
  );

  const tesla1Content = document.querySelector(
    ".tesla1-content.drawer-content"
  );

  const nvidiaDrawer = document.querySelector(".nvidia.drawer.drawer-end");
  const tesla1Drawer = document.querySelector(".tesla1.drawer.drawer-end");
  const tesla2Drawer = document.querySelector(".tesla2.drawer.drawer-end");
  const toyotaDrawer = document.querySelector(".toyota.drawer.drawer-end");

  toyotaOpenDrawer?.addEventListener("click", () => {
    // Check if nvidiaOpenDrawer is defined before accessing its style property
    if (tesla1Content && toyotaContent && nvidiaContent && tesla2Content) {
      // @ts-ignore
      toyotaContent.style.zIndex = -1;
      // @ts-ignore
      nvidiaContent.style.zIndex = -1;
      // @ts-ignore
      tesla2Content.style.zIndex = -1;
      // @ts-ignore
      tesla1Content.style.zIndex = -1;
      // @ts-ignore
      nvidiaDrawer.style.pointerEvents = 'none';
      // @ts-ignore
      tesla1Drawer.style.pointerEvents = 'none';
      // @ts-ignore
      tesla2Drawer.style.pointerEvents = 'none';
      // @ts-ignore
      toyotaDrawer.style.pointerEvents = 'none';
    } else {
      console.error("nvidiaOpenDrawer is undefined");
    }
  });

  toyotaCloseDrawer?.addEventListener("click", () => {
    // Check if nvidiaOpenDrawer is defined before accessing its style property
    if (tesla1Content && toyotaContent && nvidiaContent && tesla2Content) {
      // @ts-ignore
      toyotaContent.style.zIndex = 0;
      // @ts-ignore
      nvidiaContent.style.zIndex = 0;
      // @ts-ignore
      tesla2Content.style.zIndex = 0;
      // @ts-ignore
      tesla1Content.style.zIndex = 0;
      // @ts-ignore
      nvidiaDrawer.style.pointerEvents = 'auto';
      // @ts-ignore
      tesla1Drawer.style.pointerEvents = 'auto';
      // @ts-ignore
      tesla2Drawer.style.pointerEvents = 'auto';
      // @ts-ignore
      toyotaDrawer.style.pointerEvents = 'auto';
    } else {
      console.error("toyotaCloseDrawer is undefined");
    }
  });
</script>


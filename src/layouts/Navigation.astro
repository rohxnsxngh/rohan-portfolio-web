---
import { Image } from "astro:assets";
import RS from "@images/RS.jpg";
---

<nav class="fixed w-full z-50">
  <div class="max-w-7xl mx-auto px-6 sm:px-8 lg:px-12">
    <div class="flex justify-between items-center h-14">
      <!-- Minimal Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="flex items-center space-x-2 hover:opacity-70 transition-opacity duration-300">
          <Image
            src={RS}
            alt="RS Logo"
            class="h-6 w-6 rounded-full opacity-40"
          />
          <span class="text-primary/40 font-mono text-xs tracking-[0.3em] uppercase">RS</span>
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-6">
        <a href="/" class="nav-link">Home</a>
        <a href="/about/" class="nav-link">About</a>
        <a href="/experience/" class="nav-link">Experience</a>
        <a href="/project/" class="nav-link">Projects</a>
        <a href="/research/" class="nav-link">Research</a>
        <a href="/forge/" class="nav-link">Forge</a>
        <a href="/blog/" class="nav-link">Writing</a>
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button id="mobile-menu-button" class="text-primary/30 hover:text-primary/60 transition-colors">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1">
            <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Navigation -->
  <div id="mobile-menu" class="hidden md:hidden bg-black/30 backdrop-blur-md">
    <div class="px-4 pt-2 pb-3 space-y-1">
      <a href="/" class="mobile-nav-link">Home</a>
      <a href="/about/" class="mobile-nav-link">About</a>
      <a href="/experience/" class="mobile-nav-link">Experience</a>
      <a href="/project/" class="mobile-nav-link">Projects</a>
      <a href="/research/" class="mobile-nav-link">Research</a>
      <a href="/forge/" class="mobile-nav-link">Forge</a>
      <a href="/blog/" class="mobile-nav-link">Writing</a>
    </div>
  </div>
</nav>

<!-- Main content slot with proper spacing -->
<div class="pt-14">
  <slot />
</div>

<style>
  .nav-link {
    @apply text-primary/30 hover:text-primary/70 transition-colors duration-300 text-xs font-mono tracking-wider;
  }

  .mobile-nav-link {
    @apply block px-3 py-2 text-primary/40 hover:text-primary/80 hover:bg-white/5 transition-all duration-300 text-xs font-mono tracking-wider;
  }

  /* Add slide animation for mobile menu */
  #mobile-menu {
    transition: transform 0.3s ease-in-out;
  }

  #mobile-menu.show {
    display: block;
    animation: slideDown 0.3s ease-out forwards;
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<script>
  // Mobile menu toggle
  document.addEventListener('DOMContentLoaded', () => {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
        mobileMenu.classList.toggle('show');
      });
    }
  });
</script>

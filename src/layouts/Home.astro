---
import { Image } from "astro:assets";
import Profile from "../../src/images/profile.jpg";
import RS from "../../src/images/RS.jpg";
---

<div class="hero min-h-screen bg-base-200">
  <div class="hero-content flex-col lg:flex-row-reverse">
    <label class="swap swap-flip text-9xl">
      <!-- this hidden checkbox controls the state -->
      <input type="checkbox" />

      <div class="swap-on">
        <Image
        src={Profile}
        alt="Profile"
        class="max-w-sm rounded-full shadow-2xl sm:h-96 h-36 sm:w-96 w-36 border border-primary hover:border-4"
      />
      </div>
      <div class="swap-off">
        <Image
        src={RS}
        alt="RS Logo"
        class="max-w-sm rounded-full shadow-2xl sm:h-96 h-36 sm:w-96 w-36 border border-primary hover:border-4"
      />
      </div>
    </label>
    <div>
      <p class="py-6 px-6 sm:text-2xl text-md">
        Hey there! I'm
        <span class="text-primary">Rohan Singh</span>
      </p>
    </div>
  </div>
</div>

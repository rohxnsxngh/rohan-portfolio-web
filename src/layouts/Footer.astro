---
import { Image } from "astro:assets";
import RS from "@images/RS.jpg";
import ObfuscatedEmail from "../components/ObfuscatedEmail.astro";
---

<footer class="w-full py-4 relative z-40" role="contentinfo" aria-label="Site footer">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-12">
    <div class="flex flex-row justify-between items-center">
      <div class="flex items-center gap-2">
        <Image
          src={RS}
          alt="Rohan Singh"
          class="h-4 w-4 sm:h-5 sm:w-5 rounded-full opacity-20"
          loading="lazy"
        />
        <div class="text-primary/20 text-[9px] sm:text-[10px] font-mono tracking-wider">
          <p>Â© 2024 Rohan Singh</p>
        </div>
      </div>

      <nav class="flex items-center gap-3 sm:gap-4" aria-label="Social links">
        <a href="https://github.com/rohxnsxngh"
            class="text-primary/20 hover:text-primary/50 transition-colors duration-300 group"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="GitHub">
          <img src="/github.svg" class="w-3 h-3 sm:w-3.5 sm:h-3.5 brightness-0 invert opacity-20 group-hover:opacity-50 transition-opacity" alt="GitHub" loading="lazy"/>
        </a>
        <a href="https://www.linkedin.com/in/rohan-singh1122/"
            class="text-primary/20 hover:text-primary/50 transition-colors duration-300 group"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="LinkedIn">
          <img src="/linkedin.svg" class="w-3 h-3 sm:w-3.5 sm:h-3.5 brightness-0 invert opacity-20 group-hover:opacity-50 transition-opacity" alt="LinkedIn" loading="lazy"/>
        </a>
        <ObfuscatedEmail
          email="rohansingh.official@gmail.com"
          class="text-primary/20 hover:text-primary/50 transition-colors duration-300 group"
        >
          <img src="/google.svg" class="w-3 h-3 sm:w-3.5 sm:h-3.5 brightness-0 invert opacity-20 group-hover:opacity-50 transition-opacity" alt="Email" loading="lazy"/>
        </ObfuscatedEmail>
        <a href="/Rohan_Singh_Resume_2024RR.pdf"
            class="text-primary/20 hover:text-primary/50 transition-colors duration-300 group"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Resume">
          <img src="/document.svg" class="w-3 h-3 sm:w-3.5 sm:h-3.5 brightness-0 invert opacity-20 group-hover:opacity-50 transition-opacity" alt="Resume" loading="lazy"/>
        </a>
      </nav>
    </div>
  </div>
</footer>
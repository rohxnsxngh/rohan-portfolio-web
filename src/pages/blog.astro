---
import Navbar from "../layouts/Navigation.astro";
import Footer from "../layouts/Footer.astro";
import Layout from "../layouts/Layout.astro";

import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";

const allBlogArticles: CollectionEntry<"blog">[] = await getCollection("blog");
---

<Layout>
  <Navbar>
    <div class="sm:px-20 px-6 py-8">
      <h1 class="font-semibold sm:text-5xl text-3xl tracking-wider mb-8">Technical Chronicles</h1>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        {allBlogArticles.map((article) => {
          const tags: string[] = article.data.tags || [];
          
          // Set a default status if undefined 
          // You can customize this logic based on your needs
          const defaultStatus = "Coming Soon";
          const actualStatus = article.data.status || defaultStatus;
          
          // Determine if the article is complete or not
          const isComplete = actualStatus === "Complete";
          const statusDisplay = isComplete ? "Complete" : defaultStatus;
          
          return (
            <a href={`/blog/${article.slug}`} class="group">
              <div class="p-6 border border-accent/20 rounded-xl bg-secondary hover:bg-accent/5 transition-all duration-300 transform hover:-translate-y-1 hover:shadow-xl">
                <div class="flex flex-col h-full">
                  <div class="flex justify-between items-start mb-3">
                    <h2 class="text-xl font-bold group-hover:text-primary/90 transition-colors">{article.data.title}</h2>
                    <span class={`px-2 py-0.5 ml-2 rounded-full text-xs whitespace-nowrap ${isComplete ? 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200' : 'bg-amber-100 text-amber-800 dark:bg-amber-900 dark:text-amber-200'}`}>
                      {statusDisplay}
                    </span>
                  </div>
                  <p class="text-sm text-primary/60 mb-4">{new Date(article.data.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</p>
                  <p class="text-primary/80 flex-grow">{article.data.description}</p>
                  <div class="mt-4 flex flex-wrap gap-2">
                    {tags.map(tag => (
                      <span class="px-3 py-1 text-xs rounded-full bg-accent/10 text-primary/70">{tag}</span>
                    ))}
                  </div>
                </div>
              </div>
            </a>
          );
        })}
      </div>
    </div>
  </Navbar>
  <Footer />
</Layout>
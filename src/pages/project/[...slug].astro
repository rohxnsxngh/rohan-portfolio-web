---
import { getCollection, getEntry } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../layouts/Navigation.astro';
import Footer from '../../layouts/Footer.astro';
import MarkdownContent from '../../components/MarkdownContent.astro';

export async function getStaticPaths() {
  const projects = await getCollection('project');
  return projects.map(project => ({
    params: { slug: project.slug },
  }));
}

const { slug } = Astro.params;
const project = await getEntry('project', slug);
console.log(project);

// Add error handling for when project doesn't exist
if (!project) {
  return new Response('Project not found', { status: 404 });
}

const { Content } = await project.render();

const statusColors = {
  completed: 'bg-green-500/10 text-green-400',
  'in-progress': 'bg-blue-500/10 text-blue-400',
  'coming-soon': 'bg-purple-500/10 text-purple-400'
};

const statusText: Record<'completed' | 'in-progress' | 'coming-soon', string> = {
  completed: 'Completed',
  'in-progress': 'In Progress',
  'coming-soon': 'Coming Soon'
};

// Generate a unique ID for the image element
const imageId = `project-image-${Math.random().toString(36).substring(2, 10)}`;
---

<Layout title={`${project.data.title} | Rohan Singh`}>
  <div class="min-h-screen flex flex-col">
    <div class="flex-grow">
      <Navbar>
        <div class="sm:px-20 px-6 py-8">
          <article class="prose prose-lg dark:prose-invert max-w-4xl mx-auto">
            <header class="mb-8">
              <div class="flex items-center justify-between mb-4">
                <h1 class="text-4xl font-bold m-0">{project.data.title}</h1>
                <span class={`px-3 py-1 text-sm rounded-full ${statusColors[project.data.status as 'completed' | 'in-progress' | 'coming-soon']}`}>
                  {statusText[project.data.status as 'completed' | 'in-progress' | 'coming-soon']}
                </span>
              </div>
              <div class="flex items-center gap-4 text-primary/60">
                <time datetime={project.data.date}>
                  {new Date(project.data.date).toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long'
                  })}
                </time>
                {(project.data.github || project.data.demo) && (
                  <div class="flex gap-4">
                    {project.data.github && (
                      <a href={project.data.github} target="_blank" rel="noopener noreferrer"
                          class="text-primary/60 hover:text-primary transition-colors">
                        GitHub →
                      </a>
                    )}
                    {project.data.demo && (
                      <a href={project.data.demo} target="_blank" rel="noopener noreferrer"
                         class="text-primary/60 hover:text-primary transition-colors">
                        Live Demo →
                      </a>
                    )}
                  </div>
                )}
              </div>
              <div class="flex flex-wrap gap-2 mt-4">
                {project.data.tags.map((tag: string) => (
                  <span class="text-sm px-3 py-1 rounded-lg bg-accent/10 text-primary/70 border border-accent/20">
                    {tag}
                  </span>
                ))}
              </div>
              
              {/* Display the project image with fallback */}
              {project.data.image && (
                <div class="mt-6 mb-8 relative" id={imageId}>
                  {/* <img 
                    src={project.data.image} 
                    alt={project.data.title}
                    class="w-full rounded-lg border border-primary/20 shadow-lg project-main-image"
                    onerror={`document.getElementById('${imageId}').querySelector('.fallback-image').style.display = 'flex'; this.style.display = 'none';`}
                  /> */}
                  <div 
                    class="fallback-image w-full h-64 rounded-lg border border-primary/20 shadow-lg hidden flex-col items-center justify-center bg-gray-800 text-white/80"
                    style="display: none;"
                  >
                    <div class="text-5xl font-bold mb-4">
                      {project.data.title.split(' ').map((word: any[]) => word[0]).join('').substring(0, 2).toUpperCase()}
                    </div>
                    <div class="text-xl opacity-80">{project.data.tags[0] || "Project"}</div>
                  </div>
                </div>
              )}
            </header>
            
            <MarkdownContent>
              <Content />
            </MarkdownContent>
            
            {/* @ts-ignore */}
            {project.data.images && (
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-8">
                {/* @ts-ignore */}
                {project.data.images.map((image: { src: string; alt: string }) => (
                  <img
                    src={image.src}
                    alt={image.alt}
                    class="w-full rounded-lg border border-primary/20"
                    onerror="this.style.display='none'"
                  />
                ))}
              </div>
            )}
          </article>
        </div>
      </Navbar>
    </div>
    <Footer />
  </div>
</Layout>
---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";
import Navbar from "../layouts/Navigation.astro";
import Footer from "../layouts/Footer.astro";

// Get all research with error handling
let allResearch: any[] = [];
try {
  allResearch = await getCollection("research");
  console.log("Total research entries found:", allResearch.length);
} catch (error) {
  console.error("Error fetching research:", error);
}

// Make sure we have valid research items
const validResearch = allResearch.filter(research => 
  research && research.data && research.data.title
);
console.log("Valid research after filtering:", validResearch.length);

// Sort research by status (completed first, then in-progress, then coming-soon)
const sortedResearch = [...validResearch].sort((a, b) => {
  const statusOrder = { 
    completed: 0, 
    "in-progress": 1, 
    "coming-soon": 2 
  };
  
  const statusA = a.data?.status || "completed";
  const statusB = b.data?.status || "completed";
  
  //@ts-ignore
  const statusCompare = statusOrder[statusA] - statusOrder[statusB];
  
  // If same status, sort by date (newest first)
  if (statusCompare === 0) {
    const dateA = new Date(a.data?.date || 0).getTime();
    const dateB = new Date(b.data?.date || 0).getTime();
    return dateB - dateA;
  }
  
  return statusCompare;
});

console.log("Research after sorting:", sortedResearch.length);

// Status colors and text
const statusColors = {
  completed: "bg-green-500/10 text-green-400",
  "in-progress": "bg-blue-500/10 text-blue-400",
  "coming-soon": "bg-purple-500/10 text-purple-400",
};

const statusText = {
  completed: "Completed",
  "in-progress": "In Progress",
  "coming-soon": "Coming Soon",
};
---

<Layout title="Research">
  <div class="min-h-screen flex flex-col bg-secondary">
    <div class="flex-grow">
      <Navbar>
        <div class="relative overflow-hidden">
          <!-- Tech grid overlay -->
          <div class="absolute inset-0 tech-grid opacity-10 z-0 pointer-events-none"></div>

          <div class="relative z-10 sm:px-20 px-6 py-12">
            <!-- BOLD HEADER -->
            <div class="header-section mb-12">
              <h1 class="research-title font-mono font-black tracking-tighter leading-none select-none">
                <span class="char char-1">R</span><span class="char char-2">E</span><span class="char char-3">S</span><span class="char char-4">E</span><span class="char char-5">A</span><span class="char char-6">R</span><span class="char char-7">C</span><span class="char char-8">H</span>
              </h1>
              <div class="accent-line mt-6"></div>
            </div>

      <!-- Grid layout matching projects page -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-6 mt-8">
        {sortedResearch.length > 0 ? (
          sortedResearch.map((research) => {
            try {
              // Default values for missing data
              const title = research.data?.title || "Untitled Research";
              const description = research.data?.description || "No description available";
              const status = research.data?.status || "completed";
              const date = research.data?.date || new Date().toISOString();
              const tags = Array.isArray(research.data?.tags) ? research.data.tags : [];
              const github = research.data?.github || "";
              const paper = research.data?.paper || "";
              
              // Use default color if status is not recognized
              //@ts-ignore
              const statusColor = statusColors[status] || "bg-gray-500/10 text-gray-400";

              //@ts-ignore
              const statusDisplay = statusText[status] || "Unknown";
              
              return (
                <div class="relative z-10 research-card group">
                  <!-- Corner accent marks -->
                  <div class="card-corner-accent card-corner-tl"></div>
                  <div class="card-corner-accent card-corner-tr"></div>
                  <div class="card-corner-accent card-corner-bl"></div>
                  <div class="card-corner-accent card-corner-br"></div>

                  <!-- Animated gradient border -->
                  <div class="card-gradient-border"></div>

                  <!-- Grid overlay -->
                  <div class="card-grid-overlay"></div>

                  <!-- Glow overlay that follows mouse -->
                  <div class="glow-overlay"></div>

                  <div class="card-content h-full min-h-[200px] p-6 rounded-xl bg-black border border-accent/20 transition-all duration-300 hover:shadow-lg flex flex-col relative z-10">
                    <div class="flex items-center justify-between mb-3">
                      <a href={`/research/${research.slug}`} class="text-xl font-bold text-white hover:text-primary/90 transition-colors">
                        {title}
                      </a>
                      <span
                        class={`px-2 py-1 text-xs rounded-full ${statusColor}`}
                      >
                        {statusDisplay}
                      </span>
                    </div>
                    <p class="text-sm text-white/60 mb-4">
                      {new Date(date).toLocaleDateString("en-US", {
                        year: "numeric",
                        month: "long",
                      })}
                    </p>
                    <p class="text-white/80 flex-grow">
                      {description}
                    </p>
                    <div class="mt-4 flex flex-wrap gap-2">
                      {tags.map((tag: unknown) => (
                        <span class="text-sm px-3 py-1 rounded-lg bg-accent/20 text-white/90 border border-accent/30 hover:bg-accent/30 transition-colors duration-200">
                          {tag}
                        </span>
                      ))}
                    </div>
                    {(github || paper) && (
                      <div class="mt-4 pt-4 border-t border-accent/20 flex gap-4">
                        {github && (
                          <a
                            href={github}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="text-sm text-white/80 hover:text-white transition-colors external-link"
                          >
                            GitHub →
                          </a>
                        )}
                        {paper && (
                          <a
                            href={paper}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="text-sm text-white/80 hover:text-white transition-colors external-link"
                          >
                            Read Paper →
                          </a>
                        )}
                      </div>
                    )}
                  </div>
                  <a href={`/research/${research.slug}`} class="absolute inset-0 z-20" aria-hidden="true"></a>
                </div>
              );
            } catch (error) {
              console.error(`Error rendering research:`, error);
              return (
                <div class="bg-red-500/20 p-4 rounded-xl text-white">
                  Error rendering research item
                </div>
              );
            }
          })
        ) : (
          <div class="col-span-3 text-center py-8 bg-base-200/30 rounded-xl">
            <p class="text-white/80">No research found. Check your content collection.</p>
          </div>
        )}
      </div>
          </div>
        </div>
      </Navbar>
    </div>
    <Footer />
  </div>
</Layout>

<style>
  /* Tech grid background */
  .tech-grid {
    background-image:
      linear-gradient(rgba(255, 255, 255, 0.03) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255, 255, 255, 0.03) 1px, transparent 1px);
    background-size: 100px 100px;
    animation: gridPan 60s linear infinite;
  }

  @keyframes gridPan {
    0% { background-position: 0 0; }
    100% { background-position: 100px 100px; }
  }

  /* BOLD RESEARCH TITLE */
  .research-title {
    font-size: clamp(3rem, 12vw, 12rem);
    line-height: 0.85;
    letter-spacing: -0.08em;
    color: #ffffff;
    text-transform: uppercase;
    opacity: 0;
    animation: titleReveal 1.2s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    text-shadow:
      0 3px 25px rgba(0, 0, 0, 0.9),
      0 6px 45px rgba(0, 0, 0, 0.7);
  }

  @keyframes titleReveal {
    from {
      opacity: 0;
      transform: translateY(50px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Character animations */
  .research-title .char {
    display: inline-block;
    opacity: 0;
    transform: translateY(100px) scale(0.8);
    animation: charReveal 1s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }

  .char-1 { animation-delay: 0.05s; }
  .char-2 { animation-delay: 0.10s; }
  .char-3 { animation-delay: 0.15s; }
  .char-4 { animation-delay: 0.20s; }
  .char-5 { animation-delay: 0.25s; }
  .char-6 { animation-delay: 0.30s; }
  .char-7 { animation-delay: 0.35s; }
  .char-8 { animation-delay: 0.40s; }

  @keyframes charReveal {
    0% {
      opacity: 0;
      transform: translateY(100px) scale(0.8);
    }
    60% {
      transform: translateY(-10px) scale(1.02);
    }
    100% {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  /* Accent line */
  .accent-line {
    height: 3px;
    width: 0;
    background: linear-gradient(90deg, rgba(255, 255, 255, 0.8), transparent);
    animation: lineExpand 1.5s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    animation-delay: 0.6s;
  }

  @keyframes lineExpand {
    to {
      width: 200px;
    }
  }

  /* Research card hover animation */
  .research-card {
    transition: transform 0.3s ease-out;
    overflow: hidden;
    border-radius: 0.75rem;
  }

  .research-card:hover {
    transform: translateY(-4px);
  }

  /* Corner accent marks */
  .card-corner-accent {
    position: absolute;
    width: 20px;
    height: 20px;
    border: 2px solid rgba(255, 255, 255, 0.4);
    z-index: 15;
    pointer-events: none;
    transition: all 0.3s ease;
    opacity: 1;
  }

  .card-corner-tl {
    top: -1px;
    left: -1px;
    border-right: none;
    border-bottom: none;
    border-radius: 12px 0 0 0;
  }

  .card-corner-tr {
    top: -1px;
    right: -1px;
    border-left: none;
    border-bottom: none;
    border-radius: 0 12px 0 0;
  }

  .card-corner-bl {
    bottom: -1px;
    left: -1px;
    border-right: none;
    border-top: none;
    border-radius: 0 0 0 12px;
  }

  .card-corner-br {
    bottom: -1px;
    right: -1px;
    border-left: none;
    border-top: none;
    border-radius: 0 0 12px 0;
  }

  .research-card:hover .card-corner-accent {
    width: 30px;
    height: 30px;
    border-color: rgba(255, 255, 255, 0.8);
    filter: drop-shadow(0 0 8px rgba(255, 255, 255, 0.5));
  }

  /* Animated gradient border */
  .card-gradient-border {
    position: absolute;
    inset: -2px;
    border-radius: 0.75rem;
    padding: 2px;
    background: linear-gradient(
      45deg,
      transparent,
      rgba(0, 255, 255, 0.3),
      transparent,
      rgba(255, 0, 255, 0.3),
      transparent
    );
    background-size: 200% 200%;
    -webkit-mask:
      linear-gradient(#fff 0 0) content-box,
      linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    animation: borderGlow 4s linear infinite;
    opacity: 0.6;
    pointer-events: none;
    z-index: 5;
  }

  @keyframes borderGlow {
    0%, 100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  .research-card:hover .card-gradient-border {
    opacity: 1;
    animation-duration: 2s;
  }

  /* Grid overlay */
  .card-grid-overlay {
    position: absolute;
    inset: 0;
    border-radius: 0.75rem;
    background-image:
      linear-gradient(rgba(255, 255, 255, 0.03) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255, 255, 255, 0.03) 1px, transparent 1px);
    background-size: 20px 20px;
    pointer-events: none;
    z-index: 11;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .research-card:hover .card-grid-overlay {
    opacity: 1;
  }

  /* Mouse-following glow effect */
  .glow-overlay {
    position: absolute;
    inset: 0;
    border-radius: 0.75rem;
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
    z-index: 5;
    background: radial-gradient(
      600px circle at var(--mouse-x, 50%) var(--mouse-y, 50%),
      rgba(255, 102, 0, 0.15),
      rgba(255, 170, 68, 0.1),
      rgba(255, 68, 68, 0.05),
      transparent 40%
    );
  }

  .research-card:hover .glow-overlay {
    opacity: 1;
  }

  /* Enhanced card content hover with cyan/magenta glow */
  .card-content {
    box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.05), 0 10px 30px rgba(0, 0, 0, 0.5);
    overflow: hidden;
  }

  .research-card:hover .card-content {
    border-color: rgba(255, 255, 255, 0.3);
    box-shadow:
      inset 0 1px 0 rgba(255, 255, 255, 0.1),
      0 20px 40px rgba(0, 0, 0, 0.6),
      0 0 40px rgba(0, 255, 255, 0.1),
      0 0 80px rgba(255, 0, 255, 0.1);
  }

  /* Responsive corner accents for smaller screens */
  @media (max-width: 640px) {
    .card-corner-accent {
      width: 15px;
      height: 15px;
    }

    .research-card:hover .card-corner-accent {
      width: 20px;
      height: 20px;
    }
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .research-title {
      font-size: clamp(2.5rem, 10vw, 10rem);
    }
  }

  @media (max-width: 768px) {
    .research-title {
      font-size: clamp(2rem, 12vw, 8rem);
    }
  }

  @media (max-width: 640px) {
    .research-title {
      font-size: clamp(1.8rem, 14vw, 6rem);
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const researchCards = document.querySelectorAll<HTMLElement>('.research-card');

    researchCards.forEach((card) => {
      const glowOverlay = card.querySelector<HTMLElement>('.glow-overlay');
      if (!glowOverlay) return;

      card.addEventListener('mousemove', (e) => {
        const rect = card.getBoundingClientRect();
        const x = ((e.clientX - rect.left) / rect.width) * 100;
        const y = ((e.clientY - rect.top) / rect.height) * 100;

        glowOverlay.style.setProperty('--mouse-x', `${x}%`);
        glowOverlay.style.setProperty('--mouse-y', `${y}%`);
      });

      card.addEventListener('mouseleave', () => {
        glowOverlay.style.setProperty('--mouse-x', '50%');
        glowOverlay.style.setProperty('--mouse-y', '50%');
      });
    });
  });
</script>
---
import Layout from "../layouts/Layout.astro";
import Navbar from "../layouts/Navigation.astro";
import Footer from "../layouts/Footer.astro";
---

<Layout title="404 - Page Not Found" description="The page you're looking for doesn't exist.">
  <Navbar>
    <div class="min-h-screen bg-secondary flex items-center justify-center px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl w-full text-center">
        <!-- 404 Number -->
        <div class="mb-8">
          <h1 class="text-8xl sm:text-9xl lg:text-[12rem] font-mono text-primary/20 font-bold tracking-tighter leading-none">
            404
          </h1>
        </div>

        <!-- Error Message -->
        <div class="mb-12 slide-up">
          <h2 class="text-2xl sm:text-3xl lg:text-4xl font-mono text-primary mb-4 tracking-tight">
            Page Not Found
          </h2>
          <p class="text-lg text-primary/70 font-mono max-w-2xl mx-auto leading-relaxed">
            The page you're looking for seems to have wandered off into the digital void. 
            Don't worry, even the best explorers sometimes take a wrong turn.
          </p>
        </div>

        <!-- Navigation Links -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-12 slide-up">
          <a
            href="/"
            class="inline-flex items-center justify-center px-6 py-3 bg-primary text-secondary hover:bg-primary/90 transition-colors duration-300 font-mono text-sm tracking-wider"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-4 w-4 mr-2"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
              />
            </svg>
            Go Home
          </a>
          
          <a
            href="/about"
            class="inline-flex items-center justify-center px-6 py-3 border border-primary/20 text-primary/90 hover:bg-primary/10 transition-colors duration-300 font-mono text-sm tracking-wider"
          >
            About Me
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-4 w-4 ml-2"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M14 5l7 7m0 0l-7 7m7-7H3"
              />
            </svg>
          </a>
        </div>

        <!-- Quick Links -->
        <div class="grid grid-cols-2 sm:grid-cols-4 gap-4 max-w-2xl mx-auto slide-up">
          <a
            href="/project"
            class="group p-4 border border-primary/10 hover:border-primary/30 transition-all duration-300 hover:bg-primary/5"
          >
            <div class="text-primary/60 group-hover:text-primary transition-colors">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6 mx-auto mb-2"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
                />
              </svg>
              <span class="text-xs font-mono tracking-wider">Projects</span>
            </div>
          </a>

          <a
            href="/experience"
            class="group p-4 border border-primary/10 hover:border-primary/30 transition-all duration-300 hover:bg-primary/5"
          >
            <div class="text-primary/60 group-hover:text-primary transition-colors">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6 mx-auto mb-2"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2-2v2m8 0V6a2 2 0 012 2v6a2 2 0 01-2 2H6a2 2 0 01-2-2V8a2 2 0 012-2V6"
                />
              </svg>
              <span class="text-xs font-mono tracking-wider">Experience</span>
            </div>
          </a>

          <a
            href="/research"
            class="group p-4 border border-primary/10 hover:border-primary/30 transition-all duration-300 hover:bg-primary/5"
          >
            <div class="text-primary/60 group-hover:text-primary transition-colors">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6 mx-auto mb-2"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"
                />
              </svg>
              <span class="text-xs font-mono tracking-wider">Research</span>
            </div>
          </a>

          <a
            href="/blog"
            class="group p-4 border border-primary/10 hover:border-primary/30 transition-all duration-300 hover:bg-primary/5"
          >
            <div class="text-primary/60 group-hover:text-primary transition-colors">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6 mx-auto mb-2"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
                />
              </svg>
              <span class="text-xs font-mono tracking-wider">Writing</span>
            </div>
          </a>
        </div>

        <!-- Decorative Element -->
        <div class="mt-16 slide-up">
          <div class="inline-block">
            <div class="flex space-x-2">
              <div class="w-2 h-2 bg-primary/40 rounded-full animate-pulse"></div>
              <div class="w-2 h-2 bg-primary/60 rounded-full animate-pulse" style="animation-delay: 0.2s;"></div>
              <div class="w-2 h-2 bg-primary/40 rounded-full animate-pulse" style="animation-delay: 0.4s;"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </Navbar>
  <Footer />
</Layout>

<style>
  /* Custom animations for the 404 page */
  .slide-up {
    animation: slideUp 0.6s ease-out;
  }

  .slide-up:nth-child(2) {
    animation-delay: 0.1s;
  }

  .slide-up:nth-child(3) {
    animation-delay: 0.2s;
  }

  .slide-up:nth-child(4) {
    animation-delay: 0.3s;
  }

  @keyframes slideUp {
    0% {
      opacity: 0;
      transform: translateY(30px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Hover effects for quick links */
  .group:hover .group-hover\:text-primary {
    color: #FFFFFF;
  }

  /* Subtle glow effect on the 404 number */
  h1 {
    text-shadow: 0 0 20px rgba(255, 255, 255, 0.1);
  }
</style>
